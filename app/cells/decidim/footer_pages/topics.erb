<div class="md:w-2/3 grid grid-cols-1 gap-x-4 gap-y-10 text-md text-white md:grid-cols-2">
  <% pages.each do |topic| %>
    <nav role="navigation" aria-label="<%= topic[:title] %>" class="inline-block">
      <p class="h6 mb-6 md:mb-4"><%= topic[:title] %></p>
      <ul class="space-y-6 break-inside-avoid md:space-y-4">
        <% topic[:pages].each do |page| %>
          <%= page_item(page) %>
        <% end %>
      </ul>
    </nav>
  <% end %>
</div>
