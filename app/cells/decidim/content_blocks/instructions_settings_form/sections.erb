<div class="icon-sections">
  <% settings_fields.fields_for "sections][#{blank_section.to_param}", blank_section do |section_form| %>
    <script type="text/template" class="decidim-template">
      <%= render view: :section, locals: { form: section_form, id: blank_section.to_param } %>
    </script>
  <% end %>

  <div class="icon-sections-list">
    <% settings_fields.object.sections.each do |section_data| %>
      <% section = section_model_for(section_data) %>
      <% next if section.deleted? %>

      <% settings_fields.fields_for "sections][", section do |section_form| %>
        <%= render view: :section, locals: { form: section_form, id: section.to_param } %>
      <% end %>
    <% end %>
  </div>
  <div class="row column">
    <button type="button" class="button button__sm button__secondary small hollow add-icon-section"><%= t(".add") %></button>
  </div>
</div>
