<div class="card icon-section mb-4" id="<%= id %>-field">
  <div class="card-divider icon-section-divider">
    <h2 class="card-title flex items-center">
      <span class="flex items-center gap-x-2"><%== icon("drag-move-2-fill") %></span>
      <span><%= t(".section") %></span>

      <div class="flex items-center ml-auto gap-x-4">
        <button class="button button__sm button__transparent-secondary small alert hollow move-up-question button--title">
          <%== "#{icon("arrow-up-line")} #{t(".up")}" %>
        </button>

        <button class="button button__sm button__transparent-secondary small alert hollow move-down-question button--title">
          <%== "#{icon("arrow-down-line")} #{t(".down")}" %>
        </button>

        <button class="button button__sm button__transparent-secondary small alert hollow remove-icon-section button--title">
          <%= icon("delete-bin-line") %>
          <%= t(".remove") %>
        </button>
      </div>
    </h2>
  </div>

  <div class="card-section">
    <div class="grid-x">
      <div class="cell auto">
        <div class="row column">
          <%= form.translated :text_field, :title, label: t(".section_title") %>
          <%= form.translated :text_area, :description, label: t(".section_description") %>
          <%= form.select :icon, available_icon_options, { include_blank: true, label: t(".section_icon") } %>
        </div>
      </div>
    </div>
    <%= form.hidden_field :id %>
    <%= form.hidden_field :position, value: form.object.position || 0 %>
    <%= form.hidden_field :deleted %>
  </div>
</div>
