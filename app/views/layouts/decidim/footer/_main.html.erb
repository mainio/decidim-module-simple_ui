<div class="main-footer">
  <div class="main-footer__top">
    <div>
      <%= render partial: "layouts/decidim/footer/main_intro" %>
    </div>
    <div class="grid grid-cols-1 gap-8 md:grid-cols-[minmax(210px,328px)_minmax(calc((2*210px)+32px),calc((2*328px)+32px))]">
      <div class="text-md text-white">
        <%= render partial: "layouts/decidim/footer/main_links" %>
      </div>
      <%= cell("decidim/footer_pages", :topics) %>
    </div>
  </div>
  <div class="main-footer__down">
    <nav class="flex flex-col-reverse gap-8 md:gap-0 md:w-full md:flex-row md:justify-between" role="navigation" aria-label="Social media">
      <%= render partial: "layouts/decidim/footer/main_social_media_links" %>
    </nav>
  </div>
</div>
