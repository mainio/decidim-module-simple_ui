<% filter_sections = [] unless local_assigns.has_key?(:filter_sections) %>

<% if filter_sections.present? || local_assigns.has_key?(:search_variable) %>
  <%= filter_form_for filter, url_for, class: "new_filter self-stretch flex justify-end", data: { filters: "" } do |form| %>
    <div class="w-full mx-0 md:mx-3.5 md:w-min no-border" id="dropdown-menu-filters" role="menu">
      <% filter_sections.each do |f| %>
        <%= form.collection_filter(**f) %>
      <% end %>

      <%= yield %>
    </div>
  <% end %>
<% end %>
