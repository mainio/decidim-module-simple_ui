<% provide(:title, present(meeting).title) %>

<% add_decidim_meta_tags({
                           title: present(meeting).title,
                           description: present(meeting).description,
                           url: meeting_url(meeting.id)
                         }) %>

<%
edit_link(
  resource_locator(meeting).edit,
  :update,
  :meeting,
  meeting:
)
%>

<%= append_stylesheet_pack_tag "decidim_meetings", media: "all" %>
<%= append_javascript_pack_tag "decidim_meetings" %>

<% content_for :item_header do %>
  <%= render partial: "decidim/shared/components/back_link", locals: { url: meetings_path, text: t(".back_to_listing") } %>
<% end %>

<%= render partial: "meeting", locals: { meeting: } %>
